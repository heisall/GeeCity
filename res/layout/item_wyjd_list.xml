<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/txt_white"
    android:orientation="vertical" >

    <com.geecity.hisenseplus.home.view.RoundImageView
        android:contentDescription="@string/app_name" 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_employ_master"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_round"
        android:id="@+id/item_wuye_jiandu_head"/>
     <TextView
        android:id="@+id/item_wuye_jiandu_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="王琳琳"
        android:layout_toRightOf="@+id/item_wuye_jiandu_head"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/txt_black_light" />
     
     <TextView
         android:id="@+id/item_wuye_jiandu_zhiwei"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/item_wuye_jiandu_name"
         android:layout_below="@+id/item_wuye_jiandu_name"
         android:layout_marginTop="5dp"
         android:text="职位：物业经理"
         android:textColor="@color/txt_hint_gray"
         android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/item_wuye_jiandu_zhiwei"
        android:layout_below="@+id/item_wuye_jiandu_zhiwei"
        android:background="@color/line_light_gray" />

    <Button
        android:id="@+id/item_wuye_jiandu_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/icn_phone"
        android:background="@null"
        android:textColor="@drawable/text_green_drak"
        android:textSize="@dimen/text_size_16"
        android:drawablePadding="2dp"
        android:layout_marginRight="15dp"
        android:text="18699459921" />

</RelativeLayout>