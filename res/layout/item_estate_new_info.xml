<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_comm_item"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_pre"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_14"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_item_pre"
        android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical"
        android:text="二手房产"
        android:textColor="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_item_info"
        android:background="@color/line_light_gray" />

</RelativeLayout>