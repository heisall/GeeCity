<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.geecity.hisenseplus.home.view.PicViewer
                android:id="@+id/pv_live_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ad_height" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_live_categray_shangm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/txt_white"
                        android:text="上门"
                        android:textColor="@color/txt_hisense_green"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_live_categray_shangm"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="1dp"
                        android:background="@color/txt_hisense_green" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_live_categray_business"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_live_top_menu"
                        android:text="商户"
                        android:textColor="@color/txt_hint_gray"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_live_categray_business"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/txt_hisense_green"
                        android:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_live_categray_shipin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_live_top_menu"
                        android:text="食品"
                        android:textColor="@color/txt_hint_gray"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_live_categray_shipin"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/txt_hisense_green"
                        android:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_live_categray_jiazhuang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_live_top_menu"
                        android:text="家装"
                        android:textColor="@color/txt_hint_gray"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_live_categray_jiazhuang"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/txt_hisense_green"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

            <com.geecity.hisenseplus.home.view.GridViewForScrollView
                android:id="@+id/gvfscv_live_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:cacheColorHint="@color/txt_hint_gray"
                android:clickable="true"
                android:fadingEdge="none"
                android:numColumns="4"
                android:scrollbars="none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_bg_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lyt_life_ad_top_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f98080"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_life_ad_top_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="社区团购"
                        android:textColor="@color/txt_white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_life_ad_top_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="#7e94e7"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_life_ad_top_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="商户优惠"
                        android:textColor="@color/txt_white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lyt_life_ad_bottom_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#54BEBB"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_life_ad_bottom_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="海信广场"
                        android:textColor="@color/txt_white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_life_ad_bottom_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="#FBB183"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_life_ad_bottom_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="海信电器"
                        android:textColor="@color/txt_white"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>
            </LinearLayout>

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_life_ad_bottom_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/img_life_ad_bottom_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:clickable="true"/>

            </LinearLayout> -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_bg_gray" />

            <com.geecity.hisenseplus.home.view.ListViewForScrollView
                android:id="@+id/lvfsr_live_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/txt_white"
                android:cacheColorHint="@color/txt_hint_gray"
                android:divider="@null"
                android:dividerHeight="2dp"
                android:headerDividersEnabled="false"
                android:listSelector="@null"
                android:padding="5dp"
                android:scrollbars="none" >
            </com.geecity.hisenseplus.home.view.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/layout_bg_gray" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>