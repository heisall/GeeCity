<com.geecity.hisenseplus.home.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/cytj_img_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cytj_img_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Button
                android:id="@+id/cytj_btn_img_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_app_pic"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/cytj_del_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/txt_white"
            android:visibility="gone" />
    </FrameLayout>

</com.geecity.hisenseplus.home.view.SquareRelativeLayout>