<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_item_live_business"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/txt_white"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/img_item_bm_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icn_community_selected" />

    <TextView
        android:id="@+id/tv_item_bm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_item_bm_logo"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:text="商品"
        android:textColor="@color/txt_black_light2"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/tv_item_bm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_bm_name"
        android:layout_below="@+id/tv_item_bm_name"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="结束日期"
        android:textColor="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_item_bm_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_bm_logo"
        android:layout_alignLeft="@+id/tv_item_bm_name"
        android:gravity="center"
        android:text="￥1000.00"
        android:textColor="@color/txt_red"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_item_bm_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_bm_logo"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="2dp"
        android:text="查看  100"
        android:textColor="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>