<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/txt_white" >

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_light_gray" />

    <ImageView
        android:id="@+id/img_payment_unpay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/line"
        android:src="@drawable/icn_unpay" />
    
    <TextView
        android:id="@+id/tv_item_payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_payment_unpay"
        android:gravity="center_vertical"
        android:text="2015.10"
        android:textColor="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/rly_item_payment_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_item_payment_date" >

        <TextView
            android:id="@+id/tv_item_payment_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_item_payment_02"
            android:text="1物业费"
            android:gravity="center|left"
            android:paddingLeft="30dp"
            android:textColor="@color/txt_hint_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_item_payment_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_payment_00"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:minWidth="50dp"
            android:gravity="center|left"
            android:textColor="@color/txt_hint_gray"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

</RelativeLayout>