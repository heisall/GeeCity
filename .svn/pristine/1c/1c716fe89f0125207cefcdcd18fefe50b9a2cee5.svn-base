<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_light_gray_1"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_top"
        layout="@layout/layout_top_bar" />

    <ListView
        android:id="@+id/lv_house_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="30dp"
        android:cacheColorHint="@color/txt_hint_gray"
        android:clickable="true"
        android:divider="@null"
        android:headerDividersEnabled="false"
        android:listSelector="@null" >
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lv_house_bind"
        android:background="@color/line_light_gray" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icn_community_selected" />

</RelativeLayout>