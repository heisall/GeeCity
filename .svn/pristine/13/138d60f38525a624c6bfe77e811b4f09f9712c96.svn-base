<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rtly_my_estate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/item_my_estate_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_my_estate_detail"
        android:layout_toLeftOf="@+id/imageView1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="海信"
        android:textColor="@color/txt_hisense_green"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/item_my_estate_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_my_estate_building"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="2号楼"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/icn_pay_by_selected" />

</RelativeLayout>