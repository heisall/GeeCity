<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp" >

        <Button
            android:id="@+id/btn_disco_huodong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_disco_huodong" />

        <Button
            android:id="@+id/btn_disco_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_disco_add" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_light_gray" />

    <TextView
        android:id="@+id/tv_disc_info_catogery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:clickable="true"
        android:drawableEnd="@drawable/arrow_down_2"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="信息类别"
        android:textColor="@drawable/text_gray_green"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/line_pop_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_light_gray" />

    <com.geecity.hisenseplus.home.view.XListView
        android:id="@+id/lv_discovery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/txt_hint_gray"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:headerDividersEnabled="false"
        android:listSelector="@null"
        android:padding="5dp" />

</LinearLayout>