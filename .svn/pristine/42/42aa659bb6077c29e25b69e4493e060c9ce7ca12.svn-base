<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_gray" >

    <include
        android:id="@+id/layout_top"
        layout="@layout/layout_top_bar" />

    <FrameLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_top"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:text="1.验证手机"
            android:textColor="@color/txt_hint_gray"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/textView88"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="150dp"
            android:textColor="@color/txt_hisense_green"
            android:gravity="center"
            android:text="2.设置密码"
            android:textSize="@dimen/text_size_18" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:background="@color/line_light_gray" />

    <EditText
        android:id="@+id/et_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:background="@color/txt_white"
        android:drawableLeft="@drawable/icn_reset_pwd"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="50dp"
        android:textColorHint="@color/txt_hint_gray"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_reset_pwd"
        android:background="@color/line_light_gray" />

    <Button
        android:id="@+id/btn_reset_pwd_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_reset_pwd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/text_size_15"
        android:background="@drawable/btn_send"
        android:text="完        成"
        android:textColor="@drawable/text_white_gray" />

    <Button
        android:id="@+id/btn_reset_showpwd"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/et_reset_pwd"
        android:layout_alignBottom="@+id/et_reset_pwd"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/off_btn"
        android:gravity="center"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>