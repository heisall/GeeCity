<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_gray" >

    <include
        android:id="@+id/layout_top"
        layout="@layout/layout_top_bar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="手机号码"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:background="@color/line_light_gray" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:background="@color/txt_white" />

    <EditText
        android:id="@+id/et_ernoll_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:ems="11"
        android:inputType="textVisiblePassword"
        android:background="@null"
        android:textSize="@dimen/text_size_16"
        android:textColorHint="@color/txt_hint_gray"
        android:paddingLeft="15dp"
        android:hint="请输入手机号码" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:background="@color/line_light_gray" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="姓名"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="5dp"
        android:background="@color/line_light_gray" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView21"
        android:background="@color/txt_white" />

    <EditText
        android:id="@+id/et_ernoll_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView21"
        android:inputType="textPersonName"
        android:background="@null"
        android:textSize="@dimen/text_size_16"
        android:textColorHint="@color/txt_hint_gray"
        android:paddingLeft="15dp"
        android:hint="请输入姓名" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView31"
        android:background="@color/line_light_gray" />

    <Button
        android:id="@+id/btn_enroll_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView41"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textColor="@drawable/text_white_gray"
        android:background="@drawable/btn_send"
        android:text="完成" />

</RelativeLayout>