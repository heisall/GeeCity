<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wyjd_gallry_layout"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:clickable="true" >

    <ImageView
        android:id="@+id/item_wyjd_gallry_img"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/backgroud_alpha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#60000000" />

    <TextView
        android:id="@+id/item_wyjd_gallry_tv_catogery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark"
        android:padding="2dp"
        android:text="工作记录"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/item_wyjd_gallry_tv_clicktimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="点击20"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/item_wyjd_gallry_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_wyjd_gallry_tv_clicktimes"
        android:layout_alignRight="@+id/item_wyjd_gallry_tv_clicktimes"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="小区草坪再次整修"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/item_wyjd_gallry_btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_wyjd_gallry_tv_clicktimes"
        android:layout_alignBottom="@+id/item_wyjd_gallry_tv_clicktimes"
        android:layout_alignLeft="@+id/item_wyjd_gallry_tv_title"
        android:background="@null"
        android:text="2015-12-01"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>